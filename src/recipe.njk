---
pagination:
  data: recipes
  size: 1
  alias: recipe
permalink: "/recipes/{{ recipe.filename | slug }}/index.html"
layout: base.njk
---

<h1>{{ recipe.title }}</h1>

{% if recipe.requires %}
<p><strong>Requires:</strong> {{ recipe.requires }}</p>
{% endif %}

<h2>Ingredients</h2>
<ul>
  {% for item in recipe.ingredients %}
    <li>{{ item }}</li>
  {% endfor %}
</ul>

<h2>Instructions</h2>
<ol>
  {% for step in recipe.instructions %}
    <li>{{ step }}</li>
  {% endfor %}
</ol>

{% if recipe.remarks %}
<p><strong>Remarks:</strong> {{ recipe.remarks }}</p>
{% endif %}

{% if recipe.yield %}
<p><strong>Yield:</strong> {{ recipe.yield }}</p>
{% endif %}

{% if recipe.source %}
<p><strong>Source:</strong> {{ recipe.source }}</p>
{% endif %}
