---
pagination:
  data: recipes
  size: 1
  alias: recipe
  addAllPagesToCollections: true
permalink: "/recipes/{{ recipe.slugCategory }}/{{ recipe.filename }}/"
layout: base.njk
---


<article class="recipe-page">
  <p><a href="/recipes/page/1/" class="back-link">&laquo; Back to All Recipes</a></p>

  <h1>{{ recipe.title }}</h1>

  {% if recipe.image %}
    <img src="/images/{{ recipe.image }}" alt="{{ recipe.title }}" style="max-width: 400px;">
  {% endif %}

  {% if recipe.category %}
    <p><strong>Category:</strong>
      <a href="/categories/{{ recipe.category | slug }}/page/1/">{{ recipe.category }}</a>
    </p>
  {% endif %}

  {% if recipe.tags %}
    <p><strong>Tags:</strong>
      {% for tag in recipe.tags %}
        <a href="/tags/{{ tag | slug }}/">{{ tag }}</a>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}

  {% if recipe.source %}
    <p><strong>Source:</strong> {{ recipe.source }}</p>
  {% endif %}

  {% if recipe.yield %}
    <p><strong>Yield:</strong> {{ recipe.yield }}</p>
  {% endif %}

  {% if recipe.remarks %}
    <p><strong>Remarks:</strong> {{ recipe.remarks }}</p>
  {% endif %}

  {% if recipe.requires %}
    <p><strong>Requires:</strong> {{ recipe.requires }}</p>
  {% endif %}

  <h2>Ingredients</h2>
  <ul>
    {% for item in recipe.ingredients %}
      <li>{{ item }}</li>
    {% endfor %}
  </ul>

  <h2>Instructions</h2>
  <ol>
    {% for step in recipe.instructions %}
      <li>{{ step }}</li>
    {% endfor %}
  </ol>
</article>
