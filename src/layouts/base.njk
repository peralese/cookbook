<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{% if title %}{{ title }} 路 {% endif %}Cookbook</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {# Site CSS (pathPrefix-safe) #}
  <link rel="stylesheet" href="{{ '/styles.css' | url }}">
  <link rel="stylesheet" href="{{ '/print.css' | url }}" media="print">
</head>
<body>

  <header class="site-header">
    <div class="wrap">
      <a class="site-logo" href="{{ '/' | url }}">Cookbook</a>

      <nav class="site-nav" aria-label="Primary">
        <a href="{{ '/' | url }}">Home</a>
        <a href="{{ '/recipes/' | url }}">All Recipes</a>
        <a href="{{ '/categories/' | url }}">Categories</a>
        <a href="{{ '/tags/' | url }}">Tags</a>
        {# Uncomment if you have an About page #}
        {# <a href="{{ '/about/' | url }}">About</a> #}
      </nav>
    </div>
  </header>

  <main id="main" class="site-main">
    {{ content | safe }}
  </main>

  <footer class="site-footer">
    <div class="wrap">
      <p>&copy; {{ "" | year }} Cookbook.</p>
      <p><a href="{{ '/' | url }}">Home</a> 路 <a href="{{ '/recipes/' | url }}">All Recipes</a> 路 <a href="{{ '/categories/' | url }}">Categories</a> 路 <a href="{{ '/tags/' | url }}">Tags</a></p>
    </div>
  </footer>

  {# Optional client JS #}
  {# <script src="{{ '/search.js' | url }}" defer></script> #}
</body>
</html>



