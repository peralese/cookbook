<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{% if title %}{{ title }} · {% endif %}Cookbook</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="{{ '/style.css' | url }}">
  <link rel="stylesheet" href="{{ '/print.css' | url }}" media="print">
</head>
<body>

  <header class="site-header">
    <div class="wrap">
      

      <nav class="site-nav" aria-label="Primary">
        <a href="{{ '/' | url }}">Home</a>
        <a href="{{ '/recipes/' | url }}">All Recipes</a>
        <a href="{{ '/categories/' | url }}">Categories</a>
        <a href="{{ '/tags/' | url }}">Tags</a>
        <a href="{{ '/search/' | url }}">Search</a>
      </nav>
    </div>
  </header>

  <main id="main" class="site-main">
    <div class="wrap">
      {{ content | safe }}
    </div>
  </main>

  <footer class="site-footer">
    <div class="wrap">
      <p>&copy; {{ "" | year }} Cookbook.</p>
      <p>
        <a href="{{ '/' | url }}">Home</a> ·
        <a href="{{ '/recipes/' | url }}">All Recipes</a> ·
        <a href="{{ '/categories/' | url }}">Categories</a> ·
        <a href="{{ '/tags/' | url }}">Tags</a> ·
        <a href="{{ '/search/' | url }}">Search</a>
      </p>
    </div>
  </footer>
</body>
</html>





