{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/recipe.schema.json",
  "title": "Recipe",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string"
    },
    "ingredients": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "type": "string",
            "minLength": 1
          },
          {
            "type": "object",
            "required": [
              "text"
            ],
            "properties": {
              "text": {
                "type": "string",
                "minLength": 1
              },
              "qty": {
                "type": [
                  "string",
                  "number"
                ]
              },
              "unit": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        ]
      }
    },
    "directions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "imageUrl": {
      "type": "string",
      "minLength": 1
    },
    "image": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": false
    },
    "remarks": {
      "type": "string"
    },
    "yield": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "urlPath": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "title",
    "ingredients",
    "directions"
  ],
  "allOf": [
    {
      "description": "Accept normalized equivalents only (post\u2011loader). If you ever skip normalization, adjust here."
    }
  ]
}
