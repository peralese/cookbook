---
layout: base.njk
pagination:
  data: collections.categories
  size: 1
  alias: cat
  addAllPagesToCollections: false
permalink: "/category/{{ cat.slug }}/"
eleventyComputed:
  title: "Category: {{ cat.label }}"
---

<h1>Category: {{ cat.label }}</h1>

<p>
  <a href="{{ '/categories/' | url }}">‚Üê All Categories</a>
  &nbsp;|&nbsp;
  <a href="{{ '/recipes/' | url }}">All Recipes</a>
</p>

{% if cat.items and cat.items.length %}
  <ul class="recipe-list">
    {% for r in cat.items %}
      <li>
        <a href="{{ r.urlPath | url }}">{{ r.title or r.filename }}</a>
      </li>
    {% endfor %}
  </ul>
{% else %}
  <p>No recipes found in this category.</p>
{% endif %}



