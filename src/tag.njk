---
layout: base.njk
pagination:
  data: collections.tagged
  size: 1
  alias: tag
  addAllPagesToCollections: false
permalink: "/tags/{{ tag | slug }}/"
eleventyComputed:
  title: "Tag: {{ tag }}"
---

<h1>Tag: {{ tag }}</h1>

<p><a href="{{ '/tags/' | url }}">‚Üê All Tags</a></p>

{% set items = collections.tagged[tag] or [] %}

{% if items.length %}
  <ul class="recipe-list">
    {% for r in items %}
      <li>
        <a href="{{ r.urlPath | url }}">{{ r.title or r.filename }}</a>
        {% if r.category %}
          <small>
            in
            <a href="{{ ('/category/' + (r.slugCategory or (r.category | slug)) + '/') | url }}">
              {{ r.category }}
            </a>
          </small>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% else %}
  <p>No recipes found for this tag.</p>
{% endif %}










