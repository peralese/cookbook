---
layout: base.njk
pagination:
  data: collections.tagged
  size: 1
  alias: tagName
  resolve: "keys"           # paginate over the object KEYS
permalink: "tags/{{ tagName | slug }}/"
---

<h1>Tag: {{ tagName | tagLabel }}</h1>

<ul class="recipe-list">
  {% set items = collections.tagged[tagName] %}
  {% for recipe in items %}
    <li>
      <a href="{{ ('/recipes/' + recipe.slugCategory + '/' + recipe.slugTitleUnique + '/') | url }}">
        {{ recipe.title }}
      </a>
      <em> ({{ recipe.category }})</em>
    </li>
  {% endfor %}
</ul>









