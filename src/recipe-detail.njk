---
pagination:
  data: collections.recipes
  size: 1
  alias: recipe
permalink: "{{ recipe.urlPath | url }}"
layout: base.njk
---

<div class="container">
  <div class="card">
    <h1>{{ recipe.title or recipe.filename }}</h1>

    <p class="breadcrumbs">
      <a href="{{ '/' | url }}">Home</a> ›
      <a href="{{ '/recipes/page/1/' | url }}">Recipes</a> ›
      {{ recipe.category }}
    </p>

    {% if recipe.image %}
      <p><img src="{{ recipe.image | url }}" alt="{{ recipe.title }}"></p>
    {% endif %}

    {% if recipe.ingredients and recipe.ingredients.length %}
      <h2>Ingredients</h2>
      <ul>
        {% for ing in recipe.ingredients %}
          <li>{{ ing }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    {% if recipe.instructions and recipe.instructions.length %}
      <h2>Instructions</h2>
      <ol>
        {% for step in recipe.instructions %}
          <li>{{ step }}</li>
        {% endfor %}
      </ol>
    {% endif %}

    {% if recipe.remarks %}
      <h2>Remarks</h2>
      <p style="white-space: pre-line">{{ recipe.remarks }}</p>
    {% endif %}

    <div style="margin-top:1rem">
      {% if recipe.yield %}<p><strong>Yield:</strong> {{ recipe.yield }}</p>{% endif %}
      {% if recipe.source %}<p><strong>Source:</strong> {{ recipe.source }}</p>{% endif %}
    </div>

    {% if recipe.tags and recipe.tags.length %}
      <h3>Tags</h3>
      <ul>
        {% for t in recipe.tags %}
          <li>{{ t }}</li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>
