---
layout: base.njk
pagination:
  data: collections.recipes
  size: 1
  alias: r
  addAllPagesToCollections: true
permalink: "{{ r.urlPath }}"
eleventyComputed:
  title: "{{ r.title or r.filename }}"
---
<div class="recipe-page" data-title="{{ r.title or r.filename }}">
<nav class="breadcrumbs" aria-label="Breadcrumb">
  <a href="{{ '/' | url }}">Home</a>
  {% if r.slugCategory %}
    &raquo; <a href="{{ ('/category/' + r.slugCategory + '/') | url }}">{{ r.category or r.slugCategory }}</a>
  {% endif %}
  &raquo; <a href="{{ '/recipes/' | url }}">All Recipes</a>
</nav>
<div class="print:hidden"><button class="print-btn" type="button" onclick="window.print()" aria-label="Print Recipe">üñ®Ô∏è Print Recipe</button></div>

<div class="recipe-header-block">
  <h1>{{ r.title or r.filename }}</h1>

  {% if r.category %}
    <p class="meta">
      Category:
      <a href="{{ ('/category/' + (r.slugCategory or (r.category | slug)) + '/') | url }}">
        {{ r.category }}
      </a>
    </p>
  {% endif %}

  {% if r.tags and r.tags.length %}
    <p class="tags">
      Tags:
      {% for t in r.tags %}
        <a class="tag" href="{{ ('/tags/' + (t | slug) + '/') | url }}">{{ t }}</a>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </p>
  {% endif %}
</div>


{% if r.imageUrl %}
  <figure>
    <img src="{{ r.imageUrl | url }}" alt="{{ r.title or r.filename }}">
  </figure>
{% endif %}

{% if r.description %}
  <p class="description">{{ r.description }}</p>
{% endif %}

{% if r.ingredients %}
  <section>
    <h2>Ingredients</h2>
    <ul>
      {% for item in r.ingredients %}
        <li>{{ item }}</li>
      {% endfor %}
    </ul>
  </section>
{% endif %}

{% if r.directions %}
  <section>
    <h2>Directions</h2>
    <ol>
      {% for step in r.directions %}
        <li>{{ step }}</li>
      {% endfor %}
    </ol>
  </section>
{% endif %}

{% if r.remarks %}
  <section>
    <h2>Remarks</h2>
    <p>{{ r.remarks }}</p>
  </section>
{% endif %}

{% if r.yield and r.yield | trim %}
  <section>
    <h2>Yield</h2>
    <p>{{ r.yield | trim }}</p>
  </section>
{% endif %}

{% if r.source and r.source | trim %}
  <section>
    <h2>Source</h2>
    <p>{{ r.source | trim }}</p>
  </section>
{% endif %}

<footer class="detail-footer">
  <p>
    <a href="{{ '/recipes/' | url }}">‚Üê Back to All Recipes</a>
    {% if r.slugCategory %}
      &nbsp;‚Ä¢&nbsp;
      <a href="{{ ('/category/' + r.slugCategory + '/') | url }}">More in {{ r.category }}</a>
    {% endif %}
  </p>
</footer>

<div type="button" class="print-header" style="display:none"><p class="print-sub">{% if r.yield %}<span><strong>Yield:</strong> {{ r.yield }}</span>{% endif %}{% if r.source %}&nbsp;&nbsp;<span><strong>Source:</strong> {{ r.source }}</span>{% endif %}</p><hr/></div>
</div>







