<h1>Tags</h1>

<ul>
  {# collections.tagged is your custom map: { "Mom's": [recipes...], ... } #}
  {% for tag in collections.tagged | keys | sort %}
    <li>
      <a href="{{ ('/tags/' + (tag | slug) + '/') | url }}">
        {{ tag }}
      </a>
      ({{ collections.tagged[tag].length }})
    </li>
  {% endfor %}
</ul>

