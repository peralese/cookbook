---
title: "All Tags"
permalink: "{{ '/tags/' | url }}"
layout: layouts/base.njk
---

<h1>All Tags</h1>

{% set tagMap = collections.tagged %}
{% set allTags = tagMap | keys | sort %}

<ul>
  {% for t in allTags %}
    {% set count = (tagMap[t] or []).length %}
    <li>
      <a href="{{ ('/tags/' ~ (t | slug) ~ '/') | url }}">
        {{ t }} <small>({{ count }})</small>
      </a>
    </li>
  {% endfor %}
</ul>


