---
layout: base.njk
title: All Tags
permalink: /tags/
eleventyExcludeFromCollections: true
---

<div class="container">
  <div class="card">
    <h1>All Tags</h1>

    {% set tagMap = collections.tagged or {} %}
    {% set allTags = tagMap | keys | sort %}

    {% if allTags.length == 0 %}
      <p>No tags found.</p>
    {% else %}
      <ul>
        {% for tagName in allTags %}
          {% set count = (tagMap[tagName] or []).length %}
          {# slug for the URL: lowercase, remove apostrophes/quotes, spaces -> dashes #}
          {% set tagSlug = tagName
            | lower
            | replace("â€™","")
            | replace("'","")
            | replace('"',"")
            | replace(" ", "-")
          %}
          <li>
            <a href="{{ '/tags/' | url }}{{ tagSlug }}/">{{ tagName }}</a>
            <span>({{ count }})</span>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>






